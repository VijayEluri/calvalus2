<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>

<wps:Execute service="WPS"
             version="1.0.0"
             xmlns:wps="http://www.opengis.net/wps/1.0.0"
             xmlns:ows="http://www.opengis.net/ows/1.1"
             xmlns:xlink="http://www.w3.org/1999/xlink"
             xssing:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xesi:schemaLocation="http://www.opengis.net/wps/1.0.0 ogc/wps/1.0.0/wpsExecute_request.xsd">
  <ows:Identifier>LC-level3-$REGION-$PERIOD</ows:Identifier>
  <wps:DataInputs>
    <wps:Input>
      <ows:Identifier>calvalus.output.dir</ows:Identifier>
      <ows:Title>output directory</ows:Title>
      <wps:Data>
	<wps:Reference xlink:href="hdfs://cvmaster00:9000/calvalus/outputs/lc-sr/$REGION/$YEAR/$PERIOD" />
      </wps:Data>
    </wps:Input>
    <wps:Input>
      <ows:Identifier>calvalus.input.format</ows:Identifier>
      <wps:Data>
        <wps:LiteralData>HADOOP-STREAMING</wps:LiteralData>
      </wps:Data>
    </wps:Input>

$INPUTS

    <wps:Input>
      <ows:Identifier>calvalus.geometry</ows:Identifier>
         <ows:Title>The parameter for the WKT that defines the geometry the operation is restricted to</ows:Title>
         <wps:Data>
             <wps:LiteralData>$GEOMETRY</wps:LiteralData>
         </wps:Data>
    </wps:Input>
     <wps:Input>
          <ows:Identifier>calvalus.l2.operator</ows:Identifier>
          <wps:Data>
              <wps:LiteralData>Reproject</wps:LiteralData>
          </wps:Data>
      </wps:Input>
        <wps:Input>
            <ows:Identifier>calvalus.l2.parameters</ows:Identifier>
            <wps:Data>
                <wps:ComplexData>
                    <parameters>
                        <crs>PROJCS["Sinusoidal / World Geodetic System 1984",
      GEOGCS["World Geodetic System 1984",
        DATUM["World Geodetic System 1984",
          SPHEROID["WGS 84", 6378137.0, 298.257223563, AUTHORITY["EPSG","7030"]],
          AUTHORITY["EPSG","6326"]],
        PRIMEM["Greenwich", 0.0, AUTHORITY["EPSG","8901"]],
        UNIT["degree", 0.017453292519943295],
        AXIS["Geodetic longitude", EAST],
        AXIS["Geodetic latitude", NORTH]],
      PROJECTION["Sinusoidal"],
      PARAMETER["central_meridian", 0.0],
      PARAMETER["scale_factor", 1.0],
      PARAMETER["false_easting", 0.0],
      PARAMETER["false_northing", 0.0],
      UNIT["m", 1.0],
      AXIS["Easting", EAST],
      AXIS["Northing", NORTH]]</crs>
          <pixelSizeX>300.0</pixelSizeX>
          <pixelSizeY>300.0</pixelSizeY>
                    </parameters>
                </wps:ComplexData>
            </wps:Data>
        </wps:Input>

       <wps:Input>
            <ows:Identifier>calvalus.l3.parameters</ows:Identifier>
            <wps:Data>
                <wps:ComplexData>
                    <numRows>66792</numRows>
                    <superSampling>3</superSampling>
                    <maskExpr>!l1_flags.INVALID and !nan(corr_latitude) and (nan(ndvi) or ndvi &gt; -1)</maskExpr>
                    <variables>
                        <variable>
                            <name>status</name>
                            <expr>(not cloud_classif_flags.F_CLOUD and not cloud_classif_flags.F_CLOUD_BUFFER and cloud_classif_flags.F_CLOUD_SHADOW) ? 5 :
			      ((cloud_classif_flags.F_CLOUD or cloud_classif_flags.F_CLOUD_BUFFER or (sdr_4/sdr_5 >0.75 and not cloud_classif_flags.F_CLEAR_SNOW)) ? 4:
                                ((cloud_classif_flags.F_CLEAR_SNOW) ? 3 :
                                ((cloud_classif_flags.F_WATER) ? 2 : (nan(sdr_15) ? 4 : 1))))</expr>
                        </variable>
            			<variable><name>sdr_1</name></variable>
			            <variable><name>sdr_2</name></variable>
			            <variable><name>sdr_3</name></variable>
			            <variable><name>sdr_4</name></variable>
			            <variable><name>sdr_5</name></variable>
			            <variable><name>sdr_6</name></variable>
			            <variable><name>sdr_7</name></variable>
			            <variable><name>sdr_8</name></variable>
			            <variable><name>sdr_9</name></variable>
			            <variable><name>sdr_10</name></variable>
			            <variable><name>sdr_11</name></variable>
			            <variable><name>sdr_12</name></variable>
			            <variable><name>sdr_13</name></variable>
			            <variable><name>sdr_14</name></variable>
			            <variable><name>sdr_15</name></variable>
			            <variable><name>ndvi</name></variable>
			            <variable><name>sdr_error_1</name></variable>
			            <variable><name>sdr_error_2</name></variable>
			            <variable><name>sdr_error_3</name></variable>
			            <variable><name>sdr_error_4</name></variable>
			            <variable><name>sdr_error_5</name></variable>
			            <variable><name>sdr_error_6</name></variable>
			            <variable><name>sdr_error_7</name></variable>
			            <variable><name>sdr_error_8</name></variable>
			            <variable><name>sdr_error_9</name></variable>
			            <variable><name>sdr_error_10</name></variable>
			            <variable><name>sdr_error_11</name></variable>
			            <variable><name>sdr_error_12</name></variable>
			            <variable><name>sdr_error_13</name></variable>
			            <variable><name>sdr_error_14</name></variable>
			            <variable><name>sdr_error_15</name></variable>
                    </variables>
                    <aggregators>
                        <aggregator>
                            <type>LC_SR</type>
                        </aggregator>
                    </aggregators>
                </wps:ComplexData>
            </wps:Data>
        </wps:Input>
      <wps:Input>
          <ows:Identifier>calvalus.system.properties</ows:Identifier>
          <wps:Data>
              <wps:LiteralData>beam.reader.tileHeight=16,beam.reader.tileWidth=*,beam.pixelGeoCoding.useTiling=true,beam.envisat.usePixelGeoCoding=true</wps:LiteralData>
          </wps:Data>
      </wps:Input>
  </wps:DataInputs>
  <wps:ResponseForm>
    <wps:ResponseDocument storeExecuteResponse="true">
      <wps:Output asReference="true">
        <ows:Identifier>l2-dir</ows:Identifier>
        <ows:Title>directory of l2 output files</ows:Title>
      </wps:Output>
    </wps:ResponseDocument>
  </wps:ResponseForm>
</wps:Execute>
