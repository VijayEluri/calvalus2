                    <superSampling>3</superSampling>
                    <maskExpr>!l1_flags.INVALID and ndvi &gt; -1.0</maskExpr>
                    <variables>
                        <variable>
                            <name>status</name>
                            <expr>(not cloud_classif_flags.F_CLOUD and cloud_classif_flags.F_CLOUD_SHADOW) ? 5 : ((cloud_classif_flags.F_CLOUD) ? 4: ((cloud_classif_flags.F_CLEAR_SNOW) ? 3 :((not cloud_classif_flags.F_WATER) ? 1 : 2)))</expr>
                        </variable>
            			<variable><name>sdr_1</name></variable>
			            <variable><name>sdr_2</name></variable>
			            <variable><name>sdr_3</name></variable>
			            <variable><name>sdr_4</name></variable>
