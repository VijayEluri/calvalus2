<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.bc.calvalus</groupId>
    <artifactId>calvalus</artifactId>
    <version>1.7-SNAPSHOT</version>
    <packaging>pom</packaging>

    <name>Calvalus</name>
    <description>Calvalus root module</description>

    <properties>
        <hadoop.version>0.20.205.0</hadoop.version>
        <calvalus.version>1.7-SNAPSHOT</calvalus.version>
        <beam.version>4.11.1-SNAPSHOT</beam.version>
        <ceres.version>0.13.2</ceres.version>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>

    <modules>
        <module>calvalus-portal</module>
        <module>calvalus-exchange</module>
        <module>calvalus-inventory</module>
        <module>calvalus-production</module>
        <module>calvalus-processing</module>
        <module>calvalus-commons</module>
        <module>calvalus-examples</module>
    </modules>

    <repositories>
        <repository>
            <id>bc-mvn-repo-http</id>
            <name>Public Maven Repository at Brockmann Consult</name>
            <url>http://www.brockmann-consult.de/mvn/os</url>
            <releases>
                <enabled>true</enabled>
                <checksumPolicy>warn</checksumPolicy>
            </releases>
            <snapshots>
                <enabled>true</enabled>
                <checksumPolicy>warn</checksumPolicy>
            </snapshots>
        </repository>
        <repository>
            <id>bc-mvn-repo-closed</id>
            <name>Private Maven Repository at Brockmann Consult</name>
            <url>scp://www.brockmann-consult.de/home/maven-cs</url>
            <releases>
                <enabled>true</enabled>
                <checksumPolicy>warn</checksumPolicy>
            </releases>
            <snapshots>
                <enabled>true</enabled>
                <checksumPolicy>warn</checksumPolicy>
            </snapshots>
        </repository>

    </repositories>

    <build>
        <plugins>
            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>2.5.1</version>
                <configuration>
                    <source>1.6</source>
                    <target>1.6</target>
                    <encoding>UTF-8</encoding>
                </configuration>
            </plugin>
            <plugin>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>2.4.3</version>
                <configuration>
                    <systemProperties>
                        <!--
                             This property is set in your <user>/.m2/settings.xml file.
                             Set to 'true', if you have a Hadoop cluster up and running.
                         -->
                        <property>
                            <name>calvalus.testrunner.hadoopAvailable</name>
                            <value>${calvalus.testrunner.hadoopAvailable}</value>
                        </property>
                    </systemProperties>
                </configuration>
            </plugin>

            <plugin>
                <artifactId>maven-javadoc-plugin</artifactId>
                <version>2.7</version>
                <configuration>
                    <links>
                        <link>http://download.oracle.com/javase/6/docs/api/</link>
                        <link>http://hadoop.apache.org/mapreduce/docs/r0.21.0/api/</link>
                        <link>http://hadoop.apache.org/hdfs/docs/r0.21.0/api/</link>
                        <link>http://www.brockmann-consult.de/beam/doc/apidocs/</link>
                        <!-- check: really need this? -->
                        <link>http://google-web-toolkit.googlecode.com/svn/javadoc/1.5/</link>
                    </links>
                    <linksource>true</linksource>
                    <detectLinks>true</detectLinks>
                    <detectJavaApiLink>true</detectJavaApiLink>
                    <aggregate>true</aggregate>
                    <subpackages>com.bc.calvalus</subpackages>
                    <excludePackageNames>*.internal</excludePackageNames>
                    <maxmemory>512M</maxmemory>
                    <quiet>false</quiet>
                </configuration>
            </plugin>
        </plugins>

        <extensions>
            <extension>
                <groupId>org.apache.maven.wagon</groupId>
                <artifactId>wagon-ssh</artifactId>
                <version>1.0-beta-7</version>
            </extension>
        </extensions>

    </build>

    <reporting>
        <plugins>
            <plugin>
                <artifactId>maven-javadoc-plugin</artifactId>
                <version>2.7</version>
            </plugin>
        </plugins>
    </reporting>

