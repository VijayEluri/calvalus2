<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.bc.calvalus</groupId>
    <artifactId>calvalus</artifactId>
    <version>0.1-SNAPSHOT</version>
    <packaging>pom</packaging>

    <name>Calvalus</name>
    <description>Calvalus root module</description>

    <properties>
        <hadoop.version>0.20.2</hadoop.version>
        <calvalus.version>0.1-SNAPSHOT</calvalus.version>
        <beam.version>4.9-SNAPSHOT</beam.version>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>

    <modules>
        <module>calvalus-portal</module>
        <module>calvalus-exchange</module>
        <module>calvalus-inventory</module>
        <module>calvalus-production</module>
        <module>calvalus-mc</module>
        <module>calvalus-processing</module>
        <module>calvalus-commons</module>

        <!-- Plug-ins to Calvalus (todo - names to be confirmed in Feb 2011) -->
        <module>calvalus-binning</module>
        <module>calvalus-l2gen</module>
        <!--<module>calvalus-matchup</module>-->
        <!--<module>calvalus-trend</module>-->

        <!-- Experimental code. Parts may become productive code later. -->
        <module>calvalus-experiments</module>
    </modules>

    <repositories>
       <repository>
            <id>bc-mvn-repo-http</id>
            <name>Public Maven Repository at Brockmann Consult</name>
            <url>http://www.brockmann-consult.de/mvn/os</url>
            <releases>
                <enabled>true</enabled>
                <checksumPolicy>warn</checksumPolicy>
            </releases>
            <snapshots>
                <enabled>true</enabled>
                <checksumPolicy>warn</checksumPolicy>
            </snapshots>
        </repository>
    </repositories>

    <build>
        <plugins>
            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>1.6</source>
                    <target>1.6</target>
                    <encoding>UTF-8</encoding>
                </configuration>
            </plugin>
            <plugin>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>2.4.3</version>
                <configuration>
                    <systemProperties>
                        <!--
                             This property is set in your <user>/.m2/settings.xml file.
                             Set to 'true', if you have a Hadoop cluster up and running.
                         -->
                        <property>
                            <name>calvalus.testrunner.hadoopAvailable</name>
                            <value>${calvalus.testrunner.hadoopAvailable}</value>
                        </property>
                    </systemProperties>
                </configuration>
            </plugin>

            <plugin>
                <artifactId>maven-javadoc-plugin</artifactId>
                <version>2.7</version>
                <configuration>
                    <links>
                        <link>http://download.oracle.com/javase/6/docs/api/</link>
                        <link>http://hadoop.apache.org/mapreduce/docs/r0.21.0/api/</link>
                        <link>http://hadoop.apache.org/hdfs/docs/r0.21.0/api/</link>
                        <link>http://www.brockmann-consult.de/beam/doc/apidocs/</link>
                        <!-- check: really need this? -->
                        <link>http://google-web-toolkit.googlecode.com/svn/javadoc/1.5/</link>
                    </links>
                    <linksource>true</linksource>
                    <detectLinks>true</detectLinks>
                    <detectJavaApiLink>true</detectJavaApiLink>
                    <aggregate>true</aggregate>
                    <subpackages>com.bc.calvalus</subpackages>
                    <excludePackageNames>*.internal</excludePackageNames>
                    <maxmemory>512M</maxmemory>
                    <quiet>false</quiet>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <reporting>
        <plugins>
            <plugin>
                <artifactId>maven-javadoc-plugin</artifactId>
            </plugin>
        </plugins>
    </reporting>

    <dependencyManagement>
        <dependencies>

            <!--  Calvalus Modules -->

            <dependency>
                <groupId>com.bc.calvalus</groupId>
                <artifactId>calvalus-commons</artifactId>
                <version>${calvalus.version}</version>
            </dependency>

            <dependency>
                <groupId>com.bc.calvalus</groupId>
                <artifactId>calvalus-production</artifactId>
                <version>${calvalus.version}</version>
            </dependency>

            <dependency>
                <groupId>com.bc.calvalus</groupId>
                <artifactId>calvalus-processing</artifactId>
                <version>${calvalus.version}</version>
            </dependency>

            <dependency>
                <groupId>com.bc.calvalus</groupId>
                <artifactId>calvalus-binning</artifactId>
                <version>${calvalus.version}</version>
            </dependency>

            <dependency>
                <groupId>com.bc.calvalus</groupId>
                <artifactId>calvalus-inventory</artifactId>
                <version>${calvalus.version}</version>
            </dependency>

            <dependency>
                <groupId>com.bc.calvalus</groupId>
                <artifactId>calvalus-exchange</artifactId>
                <version>${calvalus.version}</version>
            </dependency>

            <!--  BEAM -->

            <dependency>
                <groupId>org.esa.beam</groupId>
                <artifactId>beam-core</artifactId>
                <version>${beam.version}</version>
            </dependency>
            <dependency>
                <groupId>org.esa.beam</groupId>
                <artifactId>beam-gpf</artifactId>
                <version>${beam.version}</version>
            </dependency>
            <dependency>
                <groupId>org.esa.beam</groupId>
                <artifactId>beam-envisat-reader</artifactId>
                <version>1.4-SNAPSHOT</version>
            </dependency>

            <!--  JUnit -->

            <dependency>
                <groupId>junit</groupId>
                <artifactId>junit</artifactId>
                <version>4.7</version>
                <scope>test</scope>
            </dependency>

            <!--  Hadoop -->

            <dependency>
                <groupId>org.apache.hadoop</groupId>
                <artifactId>hadoop-core</artifactId>
                <version>${hadoop.version}</version>
            </dependency>
            <dependency>
                <groupId>org.apache.hadoop</groupId>
                <artifactId>hadoop-test</artifactId>
                <version>${hadoop.version}</version>
            </dependency>

            <!-- Stuff used by Hadoop but NOT declared as dependencies in the Hadoop POM. Try to get rid of these later! -->

            <dependency>
                <groupId>commons-logging</groupId>
                <artifactId>commons-logging</artifactId>
                <version>1.0.4</version>
            </dependency>
            <dependency>
                <groupId>org.slf4j</groupId>
                <artifactId>slf4j-api</artifactId>
                <version>1.4.3</version>
            </dependency>
            <dependency>
                <groupId>org.slf4j</groupId>
                <artifactId>slf4j-log4j12</artifactId>
                <version>1.4.3</version>
            </dependency>
            <dependency>
                <groupId>org.mortbay.jetty</groupId>
                <artifactId>jetty</artifactId>
                <version>6.1.14</version>
                <scope>test</scope>
            </dependency>
            <dependency>
                <groupId>org.mortbay.jetty</groupId>
                <artifactId>jetty-util</artifactId>
                <version>6.1.14</version>
                <scope>test</scope>
            </dependency>
            <dependency>
                <groupId>commons-httpclient</groupId>
                <artifactId>commons-httpclient</artifactId>
                <version>20020423</version>
                <scope>test</scope>
            </dependency>
            <dependency>
                <groupId>log4j</groupId>
                <artifactId>log4j</artifactId>
                <version>1.2.15</version>
                <scope>test</scope>
                <exclusions>
                    <exclusion>
                        <groupId>javax.mail</groupId>
                        <artifactId>mail</artifactId>
                    </exclusion>
                    <exclusion>
                        <groupId>javax.jms</groupId>
                        <artifactId>jms</artifactId>
                    </exclusion>
                    <exclusion>
                        <groupId>com.sun.jdmk</groupId>
                        <artifactId>jmxtools</artifactId>
                    </exclusion>
                    <exclusion>
                        <groupId>com.sun.jmx</groupId>
                        <artifactId>jmxri</artifactId>
                    </exclusion>
                </exclusions>
            </dependency>

            <!-- Saxon 8.8 -->

            <dependency>
                <groupId>net.sf.saxon</groupId>
                <artifactId>saxon</artifactId>
                <version>8.8.0.7</version>
            </dependency>

            <dependency>
                <groupId>net.sf.saxon</groupId>
                <artifactId>saxon-dom</artifactId>
                <version>8.8.0.7</version>
            </dependency>

            <!-- Apache cli command line parser -->

            <dependency>
                <groupId>commons-cli</groupId>
                <artifactId>commons-cli</artifactId>
                <version>1.1</version>
            </dependency>

        </dependencies>
    </dependencyManagement>

</project>
