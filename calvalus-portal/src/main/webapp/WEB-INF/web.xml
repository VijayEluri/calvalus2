<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
        PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>

    <description>Calvalus Portal</description>

    <display-name>Calvalus Portal</display-name>

    <!-- Backend servlet -->

    <servlet>
        <servlet-name>backendServlet</servlet-name>
        <servlet-class>com.bc.calvalus.portal.server.BackendServiceImpl</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>backendServlet</servlet-name>
        <url-pattern>/calvalus/backend</url-pattern>
    </servlet-mapping>

    <!-- File upload & echo  servlet -->

    <servlet>
        <servlet-name>uploadServlet</servlet-name>
        <servlet-class>com.bc.calvalus.portal.server.FileUploadServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>uploadServlet</servlet-name>
        <url-pattern>/calvalus/upload</url-pattern>
    </servlet-mapping>

    <!-- File download servlet -->

    <servlet>
        <servlet-name>downloadServlet</servlet-name>
        <servlet-class>com.bc.calvalus.portal.server.FileDownloadServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>downloadServlet</servlet-name>
        <url-pattern>/calvalus/download</url-pattern>
    </servlet-mapping>

    <!-- Default page to serve -->

    <welcome-file-list>
        <welcome-file>calvalus.html</welcome-file>
    </welcome-file-list>

    <!-- Hadoop parameters -->

    <context-param>
        <param-name>calvalus.portal.productionServiceFactory.class</param-name>
        <!--<param-value>com.bc.calvalus.production.test.TestProductionServiceFactory</param-value>-->
        <param-value>com.bc.calvalus.production.hadoop.HadoopProductionServiceFactory</param-value>
    </context-param>

    <!-- value defaults to ${user.home}/.calvalus -->
<!--
    <context-param>
        <param-name>calvalus.portal.base.dir</param-name>
        <param-value>${user.home}/.calvalus</param-value>
    </context-param>
-->

    <!-- value is relative to ${calvalus.portal.base.dir} -->
    <context-param>
        <param-name>calvalus.portal.download.dir</param-name>
        <param-value>downloads</param-value>
    </context-param>

    <!-- value is relative to ${calvalus.portal.base.dir} -->
    <context-param>
        <param-name>calvalus.portal.upload.dir</param-name>
        <param-value>uploads</param-value>
    </context-param>

    <context-param>
        <param-name>calvalus.hadoop.fs.default.name</param-name>
        <param-value>hdfs://cvmaster00:9000</param-value>
    </context-param>

    <context-param>
        <param-name>calvalus.hadoop.mapred.job.tracker</param-name>
        <param-value>cvmaster00:9001</param-value>
    </context-param>

</web-app>
