<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent" >
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
        >

    <g:VerticalPanel spacing="2">

        <g:HTMLPanel width="100%">
            <h3>Binning Parameters</h3>
            <hr/>
        </g:HTMLPanel>

        <g:HorizontalPanel spacing="16">
            <g:HTMLPanel>
                <table>
                    <tr>
                        <td>
                            <g:Label>Variable:</g:Label>
                        </td>
                        <td>
                            <g:ListBox ui:field='inputVariables' visibleItemCount="1"/>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <g:Label>Mask expr.:</g:Label>
                        </td>
                        <td colspan="2">
                            <g:TextBox ui:field='maskExpr' visibleLength="36"/>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <g:Label>Aggregator:</g:Label>
                        </td>
                        <td>
                            <g:ListBox ui:field='aggregator' visibleItemCount="1"/>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <g:Label>Fill value:</g:Label>
                        </td>
                        <td>
                            <g:DoubleBox ui:field='fillValue' visibleLength="8"/>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <g:Label>Weight coeff.:</g:Label>
                        </td>
                        <td>
                            <g:DoubleBox ui:field='weightCoeff' visibleLength="8"/>
                        </td>
                    </tr>
                </table>
            </g:HTMLPanel>

            <g:HTMLPanel>
                <table>
                    <tr>
                        <td>
                            <g:Label>Stepping period:</g:Label>
                        </td>
                        <td>
                            <g:IntegerBox ui:field='steppingPeriodLength' visibleLength="8"/>
                        </td>
                        <td>
                            <g:Label>days</g:Label>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <g:Label>Compositing period:</g:Label>
                        </td>
                        <td>
                            <g:IntegerBox ui:field='compositingPeriodLength' visibleLength="8"/>
                        </td>
                        <td>
                            <g:Label>days</g:Label>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <g:Label>Number of period:</g:Label>
                        </td>
                        <td>
                            <g:IntegerBox ui:field='periodCount' visibleLength="8"/>
                        </td>
                        <td>
                            <g:Label>days</g:Label>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="3">
                            <hr/>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <g:Label>Spatial resolution:</g:Label>
                        </td>
                        <td>
                            <g:DoubleBox ui:field='resolution' visibleLength="8"/>
                        </td>
                        <td>
                            <g:Label>km/pixel</g:Label>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <g:Label>Supersampling:</g:Label>
                        </td>
                        <td>
                            <g:IntegerBox ui:field='superSampling' visibleLength="8"/>
                        </td>
                        <td>
                            <g:Label>pixels</g:Label>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <g:Label>Target width:</g:Label>
                        </td>
                        <td>
                            <g:IntegerBox ui:field='targetWidth' visibleLength="8"/>
                        </td>
                        <td>
                            <g:Label>pixels</g:Label>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <g:Label>Target height:</g:Label>
                        </td>
                        <td>
                            <g:IntegerBox ui:field='targetHeight' visibleLength="8"/>
                        </td>
                        <td>
                            <g:Label>pixels</g:Label>
                        </td>
                    </tr>
                </table>
            </g:HTMLPanel>

        </g:HorizontalPanel>
    </g:VerticalPanel>

</ui:UiBinder>