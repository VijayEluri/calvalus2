<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent" >
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns="http://www.w3.org/1999/html"
        >

    <g:VerticalPanel spacing="2">

        <g:HTMLPanel width="100%">
            <h3>
                <g:HTML ui:field="title"/>
            </h3>
            <hr/>
        </g:HTMLPanel>

        <g:HTMLPanel>
            <table width="100%" cellspacing="2">
                <tr>
                    <td>
                        <g:VerticalPanel>
                            <g:Anchor ui:field="showHelpAnchor"/>
                            <g:TextArea ui:field="processorParametersArea"
                                        characterWidth="60"
                                        visibleLines="10"/>
                            <g:FormPanel ui:field="uploadForm" method="POST">
                                <g:FileUpload ui:field="fileUpload" title="From file:"/>
                            </g:FormPanel>
                        </g:VerticalPanel>
                    </td>
                    <td>
                        <g:HTML ui:field="processorDescriptionHTML" width="100%"/>
                    </td>
                </tr>
            </table>
        </g:HTMLPanel>

    </g:VerticalPanel>

</ui:UiBinder>