<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent" >
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:style src="style.css" type='com.bc.calvalus.portal.client.L2ConfigForm.L2Style'/>

    <g:VerticalPanel spacing="10">

        <g:HTMLPanel width="100%">
            <h3>Existing Bundles</h3>
            <hr/>
        </g:HTMLPanel>

        <g:HorizontalPanel spacing="10">
            <g:VerticalPanel>
                <g:CheckBox ui:field="showAllUserBundles" text="Show bundles of all users" checked="false"/>
                <g:ListBox ui:field="bundleList" width="28em" visibleItemCount="20"/>
                <g:HorizontalPanel>
                    <g:Button ui:field='removeButton' text="Remove"/>
                    <g:Button ui:field='updateButton' text="Update"/>
                </g:HorizontalPanel>
            </g:VerticalPanel>
            <g:VerticalPanel spacing="5" height="26em">
                <g:HTMLPanel width="100%">
                    <h4>Processor in this Bundles</h4>
                    <hr/>
                </g:HTMLPanel>
                <g:ScrollPanel height="22em" width="100%">
                    <g:FlexTable ui:field="processors"/>
                </g:ScrollPanel>
            </g:VerticalPanel>
        </g:HorizontalPanel>

        <g:HTMLPanel width="100%">
            <h3>Upload new Bundle</h3>
            <hr/>
        </g:HTMLPanel>

        <g:FormPanel ui:field="uploadForm" method="POST">
            <g:VerticalPanel spacing="2">
                <g:HorizontalPanel spacing="2">
                    <g:Label>Bundle Name:</g:Label>
                    <g:TextBox ui:field="bundleName" width="36em"/>
                </g:HorizontalPanel>

                <g:HorizontalPanel spacing="2">
                    <g:Label>Bundle Version:</g:Label>
                    <g:TextBox ui:field="bundleVersion" width="36em"/>
                </g:HorizontalPanel>

                <g:FileUpload ui:field="fileUpload" name="fileUpload"/>
                <g:Button ui:field='submitButton' text="Upload"/>
            </g:VerticalPanel>
        </g:FormPanel>

    </g:VerticalPanel>
</ui:UiBinder>