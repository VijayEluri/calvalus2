<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent" >
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:style src="style.css" type='com.bc.calvalus.portal.client.L2ConfigForm.L2Style'/>

    <g:HorizontalPanel width="100%">

        <g:VerticalPanel spacing="5" height="30em" width="100%">
            <g:HTMLPanel width="100%">
                <h3>User Bundles on Calvalus</h3>
                <hr/>
            </g:HTMLPanel>
            <g:ListBox ui:field="bundleList" width="100%" visibleItemCount="25"/>
            <g:HorizontalPanel>
                <g:Button ui:field='removeButton' text="Remove"/>
                <g:Button ui:field='uploadButton' text="Upload"/>
            </g:HorizontalPanel>
        </g:VerticalPanel>

        <g:VerticalPanel spacing="5" height="44em" width="100%">
            <g:HTMLPanel width="100%">
                <h3>Processors Defined in Selected Bundle</h3>
                <hr/>
            </g:HTMLPanel>
            <g:ScrollPanel>
                <g:FlexTable ui:field="processors" width="100%"/>
            </g:ScrollPanel>
        </g:VerticalPanel>

    </g:HorizontalPanel>

</ui:UiBinder>