<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent" >
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns="http://www.w3.org/1999/html">

    <ui:style src="style.css"/>

    <g:VerticalPanel spacing="2">

        <g:HorizontalPanel spacing="16">

            <g:VerticalPanel spacing="2">

                <g:HTMLPanel width="100%">
                    <h3>Level-2 Processor</h3>
                    <hr/>
                </g:HTMLPanel>

                <g:ListBox ui:field="processorList" width="20em" visibleItemCount="8"/>
                <g:Label ui:field="processorBundleName" addStyleNames="{style.explanatoryText}"/>

            </g:VerticalPanel>

            <g:VerticalPanel spacing="2">

                <g:HTMLPanel width="100%">
                    <h3>Level-2 Parameters</h3>
                    <hr/>
                </g:HTMLPanel>

                <g:TextArea ui:field="processorParametersArea"
                            characterWidth="72"
                            visibleLines="8"/>
                <g:FormPanel ui:field="uploadForm" method="POST">
                    <g:FileUpload ui:field="fileUpload" name="fileUpload"/>
                </g:FormPanel>
            </g:VerticalPanel>

        </g:HorizontalPanel>

        <g:DisclosurePanel>
            <g:header>Processor description:</g:header>
            <g:HTML ui:field="processorDescriptionHTML" width="100%"/>
        </g:DisclosurePanel>

    </g:VerticalPanel>


</ui:UiBinder>