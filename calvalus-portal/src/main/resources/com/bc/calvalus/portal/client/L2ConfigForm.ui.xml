<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent" >
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:style src="style.css" type='com.bc.calvalus.portal.client.L2ConfigForm.L2Style'/>

    <g:VerticalPanel spacing="2">

        <g:HorizontalPanel spacing="16">

            <g:VerticalPanel spacing="2">

                <g:HTMLPanel width="100%">
                    <h3>Level-2 Processor</h3>
                    <hr/>
                </g:HTMLPanel>
                <g:HorizontalPanel>
                    <g:VerticalPanel>
                        <g:CheckBox ui:field="showMyProcessors" text="My processors" value="true"/>
                        <g:CheckBox ui:field="showSystemProcessors" text="System processors" value="true"/>
                    </g:VerticalPanel>
                    <g:CheckBox ui:field="showAllUserProcessors" text="Processors of other users" value="false"/>
                </g:HorizontalPanel>

                <g:ListBox ui:field="processorList" width="28em" visibleItemCount="12"/>
                <g:Label ui:field="processorBundleName" addStyleNames="{style.explanatoryLabel}"/>

            </g:VerticalPanel>

            <g:VerticalPanel spacing="2">

                <g:HTMLPanel width="100%">
                    <h3>Level-2 Parameters</h3>
                    <hr/>
                </g:HTMLPanel>

                <g:TextArea ui:field="processorParametersArea"
                            characterWidth="72"
                            visibleLines="12"/>

                <g:FormPanel ui:field="uploadForm" method="POST">
                    <g:HorizontalPanel spacing="2">
                        <g:FileUpload ui:field="fileUpload" name="fileUpload"/>
                        <g:Button ui:field='editParametersButton' text="Edit Parameters"/>
                    </g:HorizontalPanel>
                </g:FormPanel>
            </g:VerticalPanel>

        </g:HorizontalPanel>

        <g:DisclosurePanel>
            <g:header>Processor description:</g:header>
            <g:HTML ui:field="processorDescriptionHTML" width="100%"/>
        </g:DisclosurePanel>

    </g:VerticalPanel>


</ui:UiBinder>