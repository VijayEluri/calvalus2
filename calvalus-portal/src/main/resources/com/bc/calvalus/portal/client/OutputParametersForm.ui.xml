<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent" >
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
        >

    <g:VerticalPanel spacing="2">

        <g:HTMLPanel width="100%">
            <h3>Output</h3>
            <hr/>
        </g:HTMLPanel>

        <g:HorizontalPanel spacing="2">
            <g:Label>File format:</g:Label>
            <g:ListBox ui:field="outputFormat" visibleItemCount="1"/>
            <g:Label>Note that the available file formats may depend on the selected processor.</g:Label>
        </g:HorizontalPanel>

        <g:CheckBox ui:field="autoStaging"
                    text="Automatically perform staging step after successful production"
                    checked="true"/>

    </g:VerticalPanel>

</ui:UiBinder>
