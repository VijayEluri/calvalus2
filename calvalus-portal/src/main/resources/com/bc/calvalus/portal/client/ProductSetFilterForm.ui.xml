<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent" >
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:map='urn:import:com.bc.calvalus.portal.client.map'
             xmlns:date='urn:import:com.google.gwt.user.datepicker.client'
        >

    <ui:style src="style.css"/>


    <g:HorizontalPanel spacing="16">

        <g:VerticalPanel spacing="2">

            <g:HTMLPanel width="100%">
                <h3>Temporal Filter</h3>
                <hr/>
            </g:HTMLPanel>

            <g:HTMLPanel>
                <table cellspacing="2">
                    <tr>
                    </tr>
                    <tr>
                        <td colspan="3">
                            <g:RadioButton ui:field='temporalFilterOff' name="temporalFilter" text="No filter"/>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="3">
                            <g:RadioButton ui:field='temporalFilterByDateRange' name="temporalFilter"
                                           text="By date range"/>
                        </td>
                    </tr>
                    <tr>
                        <td>&nbsp;&nbsp;&nbsp;</td>
                        <td>Start date:</td>
                        <td align="right">
                            <date:DateBox ui:field='minDate' width="6em"/>
                        </td>
                    </tr>
                    <tr>
                        <td>&nbsp;&nbsp;&nbsp;</td>
                        <td>End date:</td>
                        <td align="right">
                            <date:DateBox ui:field='maxDate' width="6em"/>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="3">
                            <g:RadioButton ui:field='temporalFilterByDateList' name="temporalFilter"
                                           text="By date list"/>
                        </td>
                    </tr>
                    <tr>
                        <td>&nbsp;&nbsp;&nbsp;</td>
                        <td colspan="2">
                            <g:TextArea ui:field='dateList' width="100%" visibleLines="4"/>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="2"/>
                        <td align="right">
                            <g:TextBox ui:field='numDays' enabled="false" width="4em"/>&nbsp;days
                        </td>
                    </tr>
                </table>
            </g:HTMLPanel>

            <g:Anchor ui:field="showFilterHelp" addStyleNames="{style.anchor}">Show Help</g:Anchor>

        </g:VerticalPanel>

        <g:VerticalPanel spacing="2">

            <g:HTMLPanel width="100%">
                <h3>Spatial Filter</h3>
                <hr/>
            </g:HTMLPanel>

            <!-- <g:HorizontalPanel width="100%"> -->
                <g:HorizontalPanel spacing="2">
                    <g:RadioButton ui:field='spatialFilterOff' name="spatialFilter" text="No filter (global)"/>
                    <g:RadioButton ui:field='spatialFilterByRegion' name="spatialFilter" text="By region"/>
                </g:HorizontalPanel>
            <!-- </g:HorizontalPanel> -->

            <map:RegionMapWidget ui:field='regionMap' width="512px" height="240px"/>

            <g:Anchor ui:field="manageRegionsAnchor" addStyleNames="{style.anchor}">Add and manage user regions</g:Anchor>

        </g:VerticalPanel>

    </g:HorizontalPanel>

</ui:UiBinder>