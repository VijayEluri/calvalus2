<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>

<wps:Execute service="WPS"
             version="1.0.0"
             xmlns:wps="http://www.opengis.net/wps/1.0.0"
             xmlns:ows="http://www.opengis.net/ows/1.1"
             xmlns:xlink="http://www.w3.org/1999/xlink"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://www.opengis.net/wps/1.0.0 ogc/wps/1.0.0/wpsExecute_request.xsd">
    <ows:Identifier>${productionId}</ows:Identifier>
    <wps:DataInputs>

        <wps:Input>
            <ows:Identifier>calvalus.processor.package</ows:Identifier>
            <ows:Title>Software installation package name</ows:Title>
            <wps:Data>
                <wps:LiteralData>${processorPackage}</wps:LiteralData>
            </wps:Data>
        </wps:Input>

        <wps:Input>
            <ows:Identifier>calvalus.processor.version</ows:Identifier>
            <ows:Title>Software installation package version</ows:Title>
            <wps:Data>
                <wps:LiteralData>${processorVersion}</wps:LiteralData>
            </wps:Data>
        </wps:Input>

        <wps:Input>
            <ows:Identifier>calvalus.output.dir</ows:Identifier>
            <ows:Title>Output directory</ows:Title>
            <wps:Data>
                <wps:Reference xlink:href="hdfs://cvmaster00:9000/calvalus/outputs/${outputDir}"/>
            </wps:Data>
        </wps:Input>

        #foreach( $inputFile in $inputFiles )
            <wps:Input>
                <ows:Identifier>calvalus.input</ows:Identifier>
                <ows:Title>MERIS L1B input</ows:Title>
                <wps:Reference xlink:href="hdfs://cvmaster00:9000/calvalus/eodata/${inputFile}"/>
            </wps:Input>
        #end

        <wps:Input>
            <ows:Identifier>calvalus.l2.operator</ows:Identifier>
            <ows:Title>The name of the Level 2 BEAM GPF operator</ows:Title>
            <wps:Data>
                <wps:LiteralData>${l2OperatorName}</wps:LiteralData>
            </wps:Data>
        </wps:Input>

        <wps:Input>
            <ows:Identifier>calvalus.l2.parameters</ows:Identifier>
            <ows:Title>The parameters for the Level 2 BEAM GPF operator</ows:Title>
            <wps:Data>
                <wps:ComplexData>${l2OperatorParameters}</wps:ComplexData>
            </wps:Data>
        </wps:Input>

        <wps:Input>
            <ows:Identifier>calvalus.l3.parameters</ows:Identifier>
            <ows:Title>The parameters for the Calvalus Level 3 processor</ows:Title>
            <wps:Data>
                <wps:ComplexData>
                    <numRows>${numRows}</numRows>
                    <maskExpr>${maskExpr}</maskExpr>
                    <superSampling>${superSampling}</superSampling>
                    #if ($bbox)
                        <bbox>$bbox</bbox>
                    #elseif (${regionWkt})
                        <regionWkt>${regionWkt}</regionWkt>
                    #end
                    <variables>
                        #foreach( $variable in $variables )
                            <variable>
                                <name>${variable.name}</name>
                                <expr>${variable.expr}</expr>
                            </variable>
                        #end
                    </variables>
                    <aggregators>
                        #foreach( $aggregator in $aggregators )
                            <aggregator>
                                <type>${aggregator.type}</type>
                                #if ($aggregator.varName)
                                    <varName>${aggregator.varName}</varName>
                                #elseif ($aggregator.varNames)
                                    <varNames>${aggregator.varNames}</varNames>
                                #end
                                <weightCoeff>${aggregator.weightCoeff}</weightCoeff>
                            </aggregator>
                        #end
                    </aggregators>
                </wps:ComplexData>
            </wps:Data>
        </wps:Input>

    </wps:DataInputs>

    <wps:ResponseForm>
        <wps:ResponseDocument storeExecuteResponse="true">
            <wps:Output asReference="true">
                <ows:Identifier>l2-dir</ows:Identifier>
                <ows:Title>Directory of Level 3 output files</ows:Title>
            </wps:Output>
        </wps:ResponseDocument>
    </wps:ResponseForm>
</wps:Execute>
